{
  "name": "@hsna/prompt",
  "version": "0.3.0",
  "description": "AI 기반 프론트엔드 테스트 자동화 파트너",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "bin": {
    "prompt": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "rimraf dist && tsc && copyfiles -u 1 src/prompts/*.md dist/ && chmod +x dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rencar-dev/test-prompt-cli.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cli",
    "test",
    "automation",
    "prompt",
    "ai",
    "rencar"
  ],
  "author": "IMS Mobility Inc",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "clipboardy": "^4.0.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "type": "module"
}
